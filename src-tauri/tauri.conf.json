{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Trellico",
  "version": "0.1.1",
  "identifier": "com.john.trellico",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Trellico",
        "width": 1024,
        "height": 768,
        "minWidth": 600,
        "minHeight": 400,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": { "x": 13, "y": 18 }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/gravelBridge/Trellico/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDExMjhFN0NDRjhFMjk5RUQKUldUdG1lTDR6T2NvRVZ2M1NIWWZEV3F4bTE0aU0xbXBzNjJCQ0JRcEFNNS9CZUd3MjB0YjBWS1AK"
    }
  }
}
